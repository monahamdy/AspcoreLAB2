@model Instructor
@{
    ViewData["Title"] = "Edit";
}

<form method="post" action="\Instructor\Edit\@Model.Id" class="p-5 pb-2 m-5 lead">
    <div  class="p-2 w-50">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" value="@Model?.Name" name="Name">
    </div>
    <div class="p-2 w-50">
        <label for="exampleInputPassword1" class="form-label">Address</label>
        <input type="text" class="form-control" id="Address" value="@Model?.Address" name="Address">
    </div>
    <div class="p-2 w-50">
        <label for="Salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="Salary" value="@Model?.Salary" name="Salary">
    </div>
    <div class="p-2 w-50">
            <label for="dept_Id" class="form-label p-2">Department</label>

        <select id="dept_Id" class="form-control " name="Dept_Id" style="width:100%">
                @foreach (var dept in ViewBag.Depts)
                {

                    if (Model.dept_id == dept.Id)
                    {
                        <option value="@dept.Id" selected>@dept.Name</option>

                    }
                    <option value="@dept.Id">@dept.Name</option>
                }
            </select>
    </div>
    <div class="p-2 w-50">
        <label for="Crs_Id" class="form-label">Course</label>

        <select id="Crs_Id" class="form-control" name="Crs_Id" style="width:100%">
            @foreach (var crs in ViewBag.Courses)
            {

                if (Model.dept_id == crs.Id)
                {
                    <option value="@crs.Id" selected>@crs.CourseName</option>

                }
                <option value="@crs.Id">@crs.CourseName</option>
            }
        </select>
    </div>

    <div class="p-2 w-50">
        <label for="Image" class="form-label">Image</label>
        <input type="file" class="form-control" id="Image" value="@Model?.Img" name="Img">
    </div>

    <input type="submit" value="Edit" class="btn btn-primary mt-3 px-4" />

</form>

<a asp-action="index" class="ps-5 ms-3">back to list</a>
